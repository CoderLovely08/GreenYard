                        <div class="checkClass">
                            <label for="keepLoginTrue" style="word-wrap: break-word;">
                                <input type="checkbox" id="keepLoginTrue" checked>
                                Keep me Signed In
                            </label>
                        </div>
                        <a type="submit" href="#" onclick="document.getElementById('login_form').submit();" id="submit">Login</a>
                        <!-- <input type="submit"> -->
                    </form>
                    <h6>New here? <a href="/">Signup</a></h6>
                </div>
            </section>
        </div>
    </div>

